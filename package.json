{
  "name": "illyrionwebsite",
  "version": "1.0.0",
  "main": "src/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:sass": "npx sass --style=compressed src/assets/sass/:src/assets/css/",
    "clean": "rimraf src/assets/css/ && rimraf dist/",
    "build": "npm run clean && npm-run-all --parallel build:*",
    "prebuild": "npm install",
    "start": "npm run build && http-server ./src -p 8080"
  },
  "keywords": [
    "github-pages",
    "website"
  ],
  "author": "IllyrionSoftware",
  "license": "AGPL-3.0-only",
  "description": "This organization's static website.",
  "devDependencies": {
    "@types/node": "^20.14.10",
    "dart-sass": "^1.25.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
