{
  "name": "illyrionwebsite",
  "version": "1.0.0",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:min-css": "npx sass --style=compressed src/assets/sass/:src/assets/css/",
    "build:js": "npx tsc -p ./tsconfig.json",
    "optimize:svg": "npx svgo -f src/assets/svg -o src/assets/svg",
    "clean": "rimraf src/assets/css/ src/assets/js/",
    "build": "npm install && npm run clean && npm-run-all --parallel build:* optimize:svg",
    "start": "npm run build && http-server ./src -p 8080"
  },
  "keywords": [
    "github-pages",
    "website"
  ],
  "author": "IllyrionSoftware",
  "license": "AGPL-3.0-only",
  "description": "This organization's static website.",
  "devDependencies": {
    "@types/node": "^20.14.10",
    "browser-sync": "^3.0.2",
    "dart-sass": "^1.25.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
