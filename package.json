{
  "name": "illyrionwebsite",
  "version": "1.0.0",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:min-css": "npx sass --load-path=node_modules --style=compressed --watch src/assets/scss/:src/assets/css/",
    "build:js": "npx tsc -p ./tsconfig.json --watch",
    "optimize:svg": "npx svgo -f src/assets/svg -o src/assets/svg",
    "clean": "rimraf src/assets/css/ src/assets/js/",
    "update": "npx ncu -u",
    "build": "npm run update && npm install && npm run clean && npm-run-all --parallel build:* optimize:svg",
    "server": "http-server ./src -p 8080",
    "start": "npm-run-all --parallel build server"
  },
  "keywords": [
    "github-pages",
    "website"
  ],
  "author": "IllyrionSoftware",
  "license": "AGPL-3.0-only",
  "description": "This organization's static website.",
  "dependencies": {
    "bulma": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "http-server": "^14.1.1",
    "npm-check-updates": "^16.14.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sass": "^1.77.8",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
